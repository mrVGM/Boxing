@model IEnumerable<Boxing.Contracts.Dto.User>

@{
    Layout = "~/Views/Shared/_Signed.cshtml";
}

<style>
    .tgl {
      display: none;
    }
    
    .tgl + .tgl-btn {
      outline: 0;
      display: block;
      width: 6.5em;
      height: 2em;
      position: relative;
      cursor: pointer;
      -webkit-user-select: none;
         -moz-user-select: none;
          -ms-user-select: none;
              user-select: none;
    }

    .tgl-flip + .tgl-btn {
      padding: 2px;
      -webkit-transition: all .2s ease;
      transition: all .2s ease;
      font-family: sans-serif;
      -webkit-perspective: 100px;
              perspective: 100px;
    }
    .tgl-flip + .tgl-btn:after, .tgl-flip + .tgl-btn:before {
      display: inline-block;
      -webkit-transition: all .4s ease;
      transition: all .4s ease;
      width: 100%;
      text-align: center;
      position: absolute;
      line-height: 2em;
      font-weight: bold;
      color: #fff;
      position: absolute;
      top: 0;
      left: 0;
      -webkit-backface-visibility: hidden;
              backface-visibility: hidden;
      border-radius: 4px;
    }
    .tgl-flip + .tgl-btn:after {
      content: attr(data-tg-on);
      background: #02C66F;
      -webkit-transform: rotateY(-180deg);
              transform: rotateY(-180deg);
    }
    .tgl-flip + .tgl-btn:before {
      background: #7FC6A6;
      content: attr(data-tg-off);
    }
    .tgl-flip + .tgl-btn:active:before {
      -webkit-transform: rotateY(-20deg);
              transform: rotateY(-20deg);
    }
    .tgl-flip:checked + .tgl-btn:before {
      -webkit-transform: rotateY(180deg);
              transform: rotateY(180deg);
    }
    .tgl-flip:checked + .tgl-btn:after {
      -webkit-transform: rotateY(0);
              transform: rotateY(0);
      left: 0;
      background: #7FC6A6;
    }
    .tgl-flip:checked + .tgl-btn:active:after {
      -webkit-transform: rotateY(20deg);
              transform: rotateY(20deg);
    }

</style>



<h4>Sorting:</h4>

<table>
    <tr>
        <td>
            <input class='tgl tgl-flip' id='cb1' type='checkbox' onchange="updateList()">
            <label class='tgl-btn' data-tg-off='Rating' data-tg-on='Name' for='cb1'></label>
        </td>
        <td>
            <input class='tgl tgl-flip' id='cb2' type='checkbox' onchange="updateList()">
            <label class='tgl-btn' data-tg-off='Descending' data-tg-on='Ascending' for='cb2' style="margin-left: 5px"></label>
        </td>
    </tr>
</table>

<br />

<table class="table" id="usersTable">
    
</table>

<script>
    var skip = 0;
    var take = 10;
    var sortBy = "rating";
    var order = "asc";

    function clearTable() {
        $("#usersTable").empty();
        var $tr = $("<tr></tr>");
        $("#usersTable").append($tr);

        $tr.append("<th>username</th>");
        $tr.append("<th>Full name</th>");
        $tr.append("<th>rating</th>")
        
    }

    function updateList() {

        if ($("#cb1").is(':checked')) {
            sortBy = "fullName";
        }
        else {
            sortBy = "rating";
        }
        if ($("#cb2").is(':checked')) {
            order = "dsc";
        }
        else {
            order = "asc";
        }
        load();
    }

    function generateUserSection(user) {
        var $tr = $("<tr></tr>").attr({"id": user.id});
        var $td = $("<td></td>").append(user.username);
        $tr.append($td);

        $td = $("<td></td>").append(user.fullName);
        $tr.append($td);

        $td = $("<td></td>").append(user.rating);
        $tr.append($td);
        return $tr;
    }

    function load() {
        $.ajax({
            type: "GET",
            url: "/Users/Ajax?skip=" + skip + "&take=" + (take + 1) + "&sortBy=" + sortBy + "&order=" + order,
            success: function (data) {
                clearTable();
                var limit = Math.min(take, data.length);

                for (var i = 0; i < limit; i++) {    
                    $("#usersTable").append(generateUserSection(data[i]));
                }

                if (skip > 0) {
                    $("#prev").css({ "display": "inline-block" });
                }
                else {
                    $("#prev").css({ "display": "none" });
                }

                if (data.length <= take) {
                    $("#next").css({ "display": "none" });
                }
                else {
                    $("#next").css({ "display": "inline-block" });
                }
                
            },
            error: function (xhr, ajaxOptions, thrownError) {
                if (xhr.status == 401) {
                    window.location.href = "/Logins/Create";
                }
            }
        });
    }

    $(document).ready(function () {

        load();
        $("#prev").click(function() {
            skip = Math.max(skip - take);
            load();
        });
        $("#next").click(function () {
            skip = skip + take;
            load();
        });
    });

</script>